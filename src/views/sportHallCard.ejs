  <a class="swiper-card__link sport-hall-card__link" href="/sport-halls/<%= obj.id %>">
    <h4 class="swiper-card__name sport-hall-card__name">
      <%= obj.name %>
    </h4>
    <img class="swiper-card__img sport-hall-card__img" src="<%= obj.imgURL %>" alt="sport hall image">
    <% if (user && user.roleId === 1) { %>
      <a class="swiper-card__edit-link sport-hall-card__edit-link" href="/sport-halls/<%= obj.id %>/edit">
